<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trash.controllers.LoginHistoryController"
      spacing="10"
      style="-fx-padding: 15; -fx-background-color: white;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Фильтр по логину:" />
        <TextField fx:id="filterField" prefWidth="200" />
        <Button fx:id="filterButton" text="Применить" onAction="#handleFilter"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
        <Button fx:id="clearFilterButton" text="Сбросить" onAction="#handleClearFilter"
                style="-fx-background-color: #666666; -fx-text-fill: white;"/>

        <Region HBox.hgrow="ALWAYS" />

        <Label text="Сортировка:" />
        <ComboBox fx:id="sortComboBox" prefWidth="150" />

        <Button text="Экспорт" onAction="#handleExport"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
        <Button fx:id="backButton" text="Закрыть" onAction="#handleBack"
                style="-fx-background-color: #666666; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUsername" text="Логин пользователя" prefWidth="200" />
            <TableColumn fx:id="colIpAddress" text="IP-адрес" prefWidth="150" />
            <TableColumn fx:id="colLoginTime" text="Время попытки входа" prefWidth="200" />
            <TableColumn fx:id="colStatus" text="Статус" prefWidth="100" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>