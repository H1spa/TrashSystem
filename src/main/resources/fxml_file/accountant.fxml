<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trash.controllers.AccountantController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-font-family: 'Comic Sans MS';">

    <!-- Заголовок с пользователем -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #76E383; -fx-padding: 10;">
        <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
            <Image url="@../import/photo/Логотип.png"/>
        </ImageView>
        <VBox spacing="2">
            <Label fx:id="userNameLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="userRoleLabel" style="-fx-font-size: 12px; -fx-text-fill: #333;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <ImageView fx:id="userAvatar" fitWidth="40" fitHeight="40" preserveRatio="true"
                   style="-fx-border-radius: 20; -fx-border-color: white;"/>
    </HBox>

    <Label fx:id="welcomeLabel"
           text="Добро пожаловать, Бухгалтер!"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <VBox spacing="15" alignment="CENTER">
        <Button fx:id="viewReportsButton"
                text="Просмотреть отчёты"
                onAction="#handleViewReports"
                style="-fx-background-color: #498C51; -fx-text-fill: white; -fx-pref-width: 240;"/>

        <Button fx:id="createInvoiceButton"
                text="Сформировать счёт предприятию (ЮЛ)"
                onAction="#handleCreateInvoice"
                style="-fx-background-color: #498C51; -fx-text-fill: white; -fx-pref-width: 240;"/>

        <Button fx:id="logoutButton"
                text="Выход"
                onAction="#handleLogout"
                style="-fx-background-color: #498C51; -fx-text-fill: white; -fx-pref-width: 240;"/>
    </VBox>

    <Label fx:id="userStatusLabel"
           text="Статус: загрузка..."
           style="-fx-text-fill: gray; -fx-font-size: 12px;"/>

</VBox>