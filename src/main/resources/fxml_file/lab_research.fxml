<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trash.controllers.LabResearchController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-font-family: 'Comic Sans MS';">

    <!-- Заголовок с пользователем -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #76E383; -fx-padding: 10;">
        <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
            <Image url="@../import/photo/Логотип.png"/>
        </ImageView>
        <VBox spacing="2">
            <Label fx:id="userNameLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="userRoleLabel" style="-fx-font-size: 12px; -fx-text-fill: #333;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <ImageView fx:id="userAvatar" fitWidth="40" fitHeight="40" preserveRatio="true"
                   style="-fx-border-radius: 20; -fx-border-color: white;"/>
    </HBox>

    <Label fx:id="welcomeLabel"
           text="Добро пожаловать, Лаборант-исследователь!"
           style="-fx-font-size: 16px;"/>

    <Label fx:id="timerLabel"
           text="02:00"
           style="-fx-font-size: 18; -fx-text-fill: green;"/>

    <!-- Добавьте кнопку отчетов в HBox с другими кнопками -->
    <HBox spacing="10">
        <Button fx:id="addButton"
                text="Добавить эксперимент"
                onAction="#handleAdd"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>

        <Button fx:id="editButton"
                text="Редактировать"
                onAction="#handleEdit"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>

        <Button fx:id="deleteButton"
                text="Удалить"
                onAction="#handleDelete"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>

        <Button fx:id="exportButton"
                text="Экспорт в Excel"
                onAction="#handleExport"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>

        <!-- Новая кнопка для отчетов -->
        <Button fx:id="reportsButton"
                text="Отчеты"
                onAction="#handleReports"
                style="-fx-background-color: #1E88E5; -fx-text-fill: white;"/>

        <Button fx:id="logoutButton"
                text="Выход"
                onAction="#handleLogout"
                style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="experimentsTable"
               prefHeight="400"
               prefWidth="600"
               style="-fx-background-color: white; -fx-border-color: #ccc;">
        <columns>
            <TableColumn text="ID" prefWidth="100"/>
            <TableColumn text="Название" prefWidth="200"/>
            <TableColumn text="Дата" prefWidth="150"/>
            <TableColumn text="Статус" prefWidth="150"/>
        </columns>
    </TableView>

    <Label fx:id="userStatusLabel"
           text="Статус: загрузка..."
           style="-fx-text-fill: gray; -fx-font-size: 12px;"/>

</VBox>