<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.trash.controllers.AdminController"
            style="-fx-background-color: #FFFFFF; -fx-font-family: 'Comic Sans MS';">

    <top>
        <HBox spacing="10" style="-fx-background-color: #76E383;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
                <image>
                    <Image url="@../import/photo/Логотип.png"/>
                </image>
            </ImageView>
            <Label text="Добро пожаловать, администратор!"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Обновить" onAction="#handleRefresh" style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
            <Button text="История входа" onAction="#handleViewHistory" style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
            <Button text="Пользователи" onAction="#handleManageUsers" style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
            <Button text="Выход" onAction="#handleLogout" style="-fx-background-color: #498C51; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Онлайн пользователи" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TableView fx:id="onlineUsersTable" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colUser" text="ФИО пользователя" prefWidth="200"/>
                    <TableColumn fx:id="colIp" text="IP-адрес" prefWidth="150"/>
                    <TableColumn fx:id="colSessionTime" text="Текущая сессия" prefWidth="120"/>
                    <TableColumn fx:id="colDailyTime" text="Время за день" prefWidth="120"/>
                    <TableColumn fx:id="colTime" text="Последний вход" prefWidth="150"/>
                </columns>
            </TableView>

            <Label text="Двойной клик по строке - подробная информация. ПКМ - действия администратора."
                   style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        </VBox>
    </center>
</BorderPane>